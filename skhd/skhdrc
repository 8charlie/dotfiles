# start apps
alt - f : sleep 0.5 && open -na "Firefox"
alt - t : open -n -a /Applications/ghostty.app
alt - s : open -a /Applications/Spotify.app
alt - d : open -a /Applications/Discord.app
alt - e : kitty -e yazi ~
alt - n : kitty -e nvim


# close app
#alt - q : skhd -k "cmd - q"
alt - q : ~/.config/skhd/close_window.sh

# minimize app
alt - m : yabai -m window --close

# toggle float
ctrl - space : yabai -m window --toggle float

# change focus
alt - j : yabai -m window --focus next || yabai -m window --focus first
alt - k : yabai -m window --focus prev || yabai -m window --focus last

## resize windows
alt - h : yabai -m window --resize left:-20:0 ; yabai -m window --resize right:-20:0
alt - l : yabai -m window --resize right:20:0 ; yabai -m window --resize left:20:0

# move to space 
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
